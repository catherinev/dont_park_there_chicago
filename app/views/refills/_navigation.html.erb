<header role = "banner" class = "row">
  <nav role="navigation" class = "row">
    <header class="navigation" style="padding-bottom: 2em">
      <div class="menu-wrapper">      
        <div class="navigation-tools">
          <div class = 'left-col'></div>
          <div class="search-bar">
            <div class="search-and-submit">
              <input id = "lower_address" type="search" placeholder="Enter Street Address" />
                <button id = "lower_address_submit" type="submit">
                  <img src="https://raw.githubusercontent.com/Magnus-G/Random/master/search-icon.png" alt="">
                </button>
            
          
        </div>

      </div>
      <div class = 'right-col'>
        <% unless current_user %>
          <a href="javascript:void(0)" class="login">
          <div class="modal">
            <label for="modal-1">
              <div class="btn js-btn">Log In</div>
            </label>
            <input class="modal-state" id="modal-1" type="checkbox" />
            <div class="modal-window">
              <div class="modal-inner">
                <label class="modal-close" for="modal-1"></label>
                <h1>Log In</h1>
                <div class="container">
                <%= form_for(:user, :url => user_session_path, :html => { :role => 'form', :id => "new_user"}) do |f| %>
                    <div class="form-group">
                      <%= f.label :email %>
                      <%= f.text_field :email, :autofocus => true, class: 'form-control1' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password %>
                      <%= f.text_field :password, :autofocus => true, class: 'form-control1' %>
                    </div>
                    <%= f.submit 'Log In' %>
                  <% end %>
                </div>      
              </div>
            </div>
          </div>
        </a>
        <% else %>       
          <%= link_to "Profile", user_path(current_user), :class => 'nav_button' %>
      
          <%= link_to "Log Out", destroy_user_session_path, :method => :delete, :class => 'nav_button' %>
        <% end %>
      </div>
      </div>    
    </header>
  </nav>
</header>

<header role = "banner" class = "row">

<nav role="navigation" class = "row">
  <header class="navigation">
    <div class="lower-menu">
      <p><em>Find out all you need to know about street sweeping in Chicago.</em></p>
    </div>
  </header>
</nav>

</header>