<header class="navigation">
  <div class="menu-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="">
    </a>
    <p class="navigation-menu-button" id="js-mobile-menu">DPT CHI</p>
    <div class="nav">
      <ul id="navigation-menu">
        <li class="nav-link"><a href="javascript:void(0)">DPT CHI</a></li>
      </ul>
    </div>
    <div class="navigation-tools">
      <div class="search-bar">
        <div class="search-and-submit">
          
        </div>
      </div>
      <a href="javascript:void(0)" class="login">
        <div class="modal">
          <label for="modal-1">
          <% unless current_user %>
            <div class="btn js-btn">Log In</div>
            <% else %>
            <div class="btn js-btn">Log Out</div>
            <% end %>
          </label>
          <input class="modal-state" id="modal-1" type="checkbox" />
          <div class="modal-window">
            <div class="modal-inner">
              <label class="modal-close" for="modal-1"></label>
              <h1>Log In</h1>
              <div class="container">
              <%= form_for(:session, :url => user_session_path, :html => { :role => 'form', :id => "new_user"}) do |f| %>
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, :autofocus => true, class: 'form-control1' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.text_field :password, :autofocus => true, class: 'form-control1' %>
                  </div>
                  <%= f.submit 'Log In' %>
                <% end %>
              </div>      
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
</header>